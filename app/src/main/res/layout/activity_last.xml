<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thirdtou.MainActivity"
    android:background="@drawable/gradiant"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:scaleX="2"
                android:scaleY="2"
                android:textColor="@color/colorWhite"
                android:textSize="70dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleX="3.5"
                android:scaleY="3.5"
                android:layout_marginBottom="13dp"
                android:gravity="center_horizontal"
                android:src="@drawable/colon"
                />


            <TextView
                android:id="@+id/minute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:scaleX="2"
                android:scaleY="2"
                android:textColor="@color/colorWhite"
                android:textSize="70dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:letterSpacing="0.15"
            android:scaleY="1.3"
            android:scaleX="1"
            android:maxLines="1"
            android:paddingStart="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="45dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:orientation="horizontal">

            <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            tools:text="03"
            android:layout_weight="0.8"
            android:includeFontPadding="false"
            android:layout_marginTop="13dp"
            android:layout_marginStart="10dp"
            android:letterSpacing="0.07"
            android:scaleX="1.5"
            android:scaleY="1.7"
            android:textColor="@color/colorWhite"
            android:textSize="67dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="2.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.07"
                    android:maxLines="1"
                    tools:text="WEDNESDAY"
                    android:textColor="@color/colorWhite"
                    android:textSize="35dp" />

                <TextView
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.3"
                    android:textColor="@color/colorWhite"
                    android:textSize="55.33dp"
                    android:scaleY="1.05"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="지금부터 TOU가"
                android:letterSpacing="0.2"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/username"
                android:letterSpacing="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:shadowRadius="30"
                android:shadowColor="@color/colorWhite"
                android:textSize="18.33dp"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:id="@+id/text2"
                android:letterSpacing="0.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님을 응원하겠습니다."
                android:textSize="16dp"
                android:textColor="@color/colorWhite"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/button_start"
        android:layout_width="216.67dp"
        android:layout_height="38dp"
        android:layout_marginBottom="33.33dp"
        android:layout_gravity="center_horizontal"
        android:text="START"
        android:letterSpacing="0.2"
        android:background="@drawable/buttonshape"
        android:textColor="@color/colorWhite"
        android:textSize="13.33dp" />
</LinearLayout>