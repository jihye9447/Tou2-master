<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant"
    android:orientation="vertical"
    tools:context="com.thirdtou.MainActivity"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hour"
                fontPath="fonts/nanumgEX.ttf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:scaleX="2"
                android:scaleY="2"
                android:textColor="@color/colorWhite"
                android:textSize="70dp" />

            <ImageView
                android:id="@+id/colon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:scaleX="3.5"
                android:scaleY="3.5" />


            <TextView
                android:id="@+id/minute"
                fontPath="fonts/nanumgEX.ttf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:scaleX="2"
                android:scaleY="2"
                android:textColor="@color/colorWhite"
                android:textSize="70dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/month"
            fontPaht="fonts/nanumgL.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:letterSpacing="0.15"
            android:maxLines="1"
            android:paddingStart="5dp"
            android:scaleX="1"
            android:scaleY="1.3"
            android:textColor="@color/colorWhite"
            android:textSize="45dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                fontPath="fonts/nanumg.ttf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:layout_weight="0.8"
                android:includeFontPadding="false"
                android:letterSpacing="0.07"
                android:scaleX="1.5"
                android:scaleY="1.7"
                android:textColor="@color/colorWhite"
                android:textSize="67dp"
                tools:text="03" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="2.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.07"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="35dp"
                    tools:text="WEDNESDAY"
                    fontPath="fonts/nanumgEX.ttf"/>

                <TextView
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.3"
                    android:scaleY="1.05"
                    android:textColor="@color/colorWhite"
                    android:textSize="55.33dp"
                    fontPath = "fonts/nanumgL.ttf"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:text="지금부터 "
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    fontPath="fonts/smr.ttf"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:text="TOU"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    fontPath="fonts/jejug.ttf"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:text="가"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    fontPath="fonts/smr.ttf"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.1"
                    android:shadowColor="@color/colorWhite"
                    android:shadowRadius="15"
                    android:textColor="@color/colorWhite"
                    android:textSize="18.33dp"
                    fontPath="fonts/smr.ttf"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:text="님을 응원하겠습니다."
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    fontPath="fonts/smr.ttf"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/button_start"
        android:layout_width="216.67dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="33.33dp"
        android:background="@drawable/buttonshape"
        android:letterSpacing="0.2"
        android:text="START"
        android:textColor="@color/colorWhite"
        android:textSize="13.33dp" />
</LinearLayout>